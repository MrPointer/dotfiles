    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (install-impl.sh)",
            "program": "${workspaceFolder}/install-impl.sh",
            "env": {
                "PATH": "/opt/homebrew/opt/gnu-getopt/bin:${env:PATH}",
