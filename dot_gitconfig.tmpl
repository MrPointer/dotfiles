[user]
	name = {{ .personal.full_name }}
	email = {{ .personal.email }}
	signingkey = {{ .personal.signing_key }}
[pull]
	rebase = true
[submodule]
	recurse = true
[core]
	autocrlf = input
    editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	exe = update-index --chmod=+x
	root = rev-parse --show-toplevel
[commit]
	gpgSign = true
[gpg]
	program = gpg
