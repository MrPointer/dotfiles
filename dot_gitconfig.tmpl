[user]
	name = {{ .personal.full_name }}
	email = {{ .personal.email }}
	signingkey = {{ .personal.signing_key }}
[pull]
	rebase = true
[submodule]
	recurse = true
[core]
	autocrlf = input
[alias]
	exe = update-index --chmod=+x
	root = rev-parse --show-toplevel
[commit]
	gpgSign = true
[gpg]
	program = gpg
