export PATH=$HOME/.local/bin:$HOME/bin:/usr/local/bin:$PATH

if [[ -d /home/linuxbrew/ && -f /home/linuxbrew/.linuxbrew/bin/brew ]]; then
    # Load (home)brew
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

if [[ -d "$HOME/.pyenv" ]]; then
  # Enable pyenv
  export PYENV_ROOT="$HOME/.pyenv"
  export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init --path)"
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
fi

if [[ -d "/home/linuxbrew/.linuxbrew/lib/ruby" ]]; then
  # Add Ruby's exec dir to make Ruby execs available
  export PATH="$PATH:/home/linuxbrew/.linuxbrew/lib/ruby/gems/3.1.0/bin"
fi

{{ if .personal.work_env -}}
source {{ .system.work_generic_dotfiles_profile }}
if [[ -v "WORK_ZSH_ENV_EXTENSION" && -f "$WORK_ZSH_ENV_EXTENSION" ]]; then
  source "$WORK_ZSH_ENV_EXTENSION"
fi
{{- end }}

